// Funciones de utilidad para queries
export const withErrorHandling = async (queryFn) => {
  try {
    const result = await queryFn();

    if (result.error) {
      console.error('‚ùå Supabase query error:', result.error);
      throw new Error(result.error.message);
    }

    return result.data;
  } catch (error) {
    console.error('‚ùå Query execution error:', error);
    throw error;
  }
};

