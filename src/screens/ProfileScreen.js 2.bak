          try {
            console.log('üîÑ PROFILE - Iniciando migraci√≥n...');

            const migrationService = new MigrationService();
            await migrationService.startMigration(authUser?.id);

            const status = migrationService.getStatus();
            const errors = migrationService.getErrors();

            if (status === 'completed') {
